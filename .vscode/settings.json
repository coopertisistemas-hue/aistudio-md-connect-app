{
    "deno.enable": true,
    "deno.importMap": "./supabase/functions/deno.json",
    "deno.lint": true,
    "deno.unstable": false,
    "deno.suggest.completeFunctionCalls": true,
    "deno.suggest.imports": {
        "domains": {
            "esm.sh": true,
            "deno.land": true
        }
    },
    "[typescript]": {
        "editor.defaultFormatter": "deno-vscode.deno"
    },
    "[javascript]": {
        "editor.defaultFormatter": "deno-vscode.deno"
    },
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/dist": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true
    }
}
